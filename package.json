{
  "name": "ffmpeg-oneclick",
  "version": "0.1.0",
  "private": true,
  "description": "One-click FFmpeg library for Node.js - Simple, Fast, Complete",
  "keywords": [
    "ffmpeg",
    "video",
    "audio",
    "transcode",
    "convert",
    "stream",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "GPL-3.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @ffmpeg-oneclick/core",
    "build": "npm run build -ws",
    "test": "npm test -ws",
    "test:coverage": "npm run test:coverage -ws",
    "lint": "eslint packages/**/src --ext .ts",
    "format": "prettier --write \"packages/**/src/**/*.ts\"",
    "clean": "npm run clean -ws",
    "prepare": "husky install",
    "typecheck": "npm run typecheck -ws"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
